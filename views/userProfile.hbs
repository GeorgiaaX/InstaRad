<div class="container">
     <div class="d-flex align-items-center individual-comment">
        <img src="/images/InstaRadLogo.png"  class="brand-logo" style="margin-right: 10px;">
        <h1 class="brand-font nav-bar-brand">InstaRad</h1>
    </div>
    <!-- Profile Section -->
  <div class="container mt-4">
    <div class="row">
        <!-- Profile Picture -->
        <div class="col-md-3 text-center">
            <div class="profile-pic">
                <img src="{{profile}}" class="large-profile-pic rounded-circle" alt="Profile Image">
            </div>
        </div>
        <!-- User Info -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center">
                <h1>{{userName}}</h1>
            </div>
            <div class="d-flex">
                <p class = "header-stats"><strong>{{countPosts}}</strong> Posts</p>
            </div>
        </div>
    </div>
</div>
    <hr>

    <!-- Post Section -->
        <div class="container">
            <div class="row mt-4">
                {{#each posts}}
                <div class="col-md-4 mb-4">
                    <div class="post-tile">
                        <a href="/posts/{{_id}}">
                        <img src="{{image}}" alt="Post Image">
                        </a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</div>